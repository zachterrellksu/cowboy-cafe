<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1480">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Button Name="ItemSelection" FontSize="18"  Grid.Row="0" HorizontalAlignment="Left" Margin="100,10,105,0" Width="196" Click="ItemSelection_Click">Item Selection</Button>
            <Button Name="CancelOrder" Grid.Row="0" FontSize="18" HorizontalAlignment="Center" Width="196" Margin="0,10,0,0">Cancel Order</Button>
            <Button Name="CompleteOrder" Grid.Row="0" FontSize="18" HorizontalAlignment="Left" Width="196" Margin="877,10,0,0" Click="CompleteOrder_Click">Complete Order</Button>
        </Grid>
        <local:MenuItemSelectionControl Grid.Column="0" Grid.Row="1"/>
        <local:OrderSummaryControl Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
